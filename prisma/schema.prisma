model Company {
  id Int @id @default(autoincrement())
  name String
  positions Position[]
}

model Position {
  id Int @id @default(autoincrement())
  role String
  link String
  firm String
  location String
  company Company @relation(fields: [company_id], references: [id])
  company_id Int
}